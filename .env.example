# A2I2 Platform Environment Variables
# =====================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control
#
# cp .env.example .env.local

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Choose ONE: Supabase OR Neon

# --- Option A: Supabase ---
# Get from: Supabase Dashboard > Project Settings > API
SUPABASE_URL="https://your-project-id.supabase.co"
SUPABASE_ANON_KEY="your-anon-public-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# For Next.js frontend (public, exposed to browser)
NEXT_PUBLIC_SUPABASE_URL="https://your-project-id.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-public-key"

# --- Option B: Neon (Recommended for Vercel) ---
# Get from: Neon Dashboard > Connection Details
# Use POOLED connection for API routes
DATABASE_URL="postgres://user:password@ep-xxx-pooler.region.aws.neon.tech/dbname?sslmode=require"
# Use DIRECT connection for migrations only
DATABASE_URL_DIRECT="postgres://user:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require"

# ===========================================
# AI MODEL API KEYS (Required)
# ===========================================

# Anthropic Claude API
# Get from: https://console.anthropic.com/account/keys
ANTHROPIC_API_KEY="sk-ant-api03-your-key-here"

# Google Gemini API
# Get from: https://aistudio.google.com/apikey
GEMINI_API_KEY="AIzaSy-your-key-here"

# ===========================================
# AI MODEL CONFIGURATION (Optional)
# ===========================================

# Default Gemini model
# Options: gemini-3-pro-preview, gemini-3-flash-preview, gemini-2.5-pro, gemini-2.5-flash
GEMINI_DEFAULT_MODEL="gemini-3-flash-preview"

# Thinking level for Gemini 3 models
# Options: minimal, low, medium, high
GEMINI_THINKING_LEVEL="high"

# Temperature for model responses
# Range: 0.0-2.0 (Gemini 3 optimized for 1.0)
GEMINI_TEMPERATURE="1.0"

# ===========================================
# EMBEDDINGS & SEARCH (Optional)
# ===========================================

# OpenAI - for text-embedding-3-small/large
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-proj-your-key-here"

# Voyage AI - alternative embedding provider
# Get from: https://www.voyageai.com/api
VOYAGE_API_KEY=""

# Cohere - alternative embedding provider
# Get from: https://dashboard.cohere.com/api-keys
COHERE_API_KEY=""

# ===========================================
# VOICE INTEGRATION (Optional - Phase 3+)
# ===========================================

# Voice operation mode
# Options: cloud, local
VOICE_MODE="cloud"

# Speech-to-Text service
# Options: openai, whisper
VOICE_STT_SERVICE="openai"

# Text-to-Speech service
# Options: openai, kokoro, elevenlabs
VOICE_TTS_SERVICE="openai"

# TTS voice preset (OpenAI voices)
# Options: alloy, echo, fable, onyx, nova, shimmer
VOICE_TTS_VOICE="nova"

# Whisper model for local STT
# Options: tiny, base, small, medium, large
WHISPER_MODEL="base.en"

# ElevenLabs - premium voice synthesis
# Get from: https://elevenlabs.io/app/api-keys
ELEVENLABS_API_KEY=""

# Picovoice - wake word detection
# Get from: https://console.picovoice.co/
PICOVOICE_ACCESS_KEY=""

# HuggingFace - for PersonaPlex voice model access
# Get from: https://huggingface.co/settings/tokens
HF_TOKEN=""

# ===========================================
# AUTHENTICATION (Production)
# ===========================================

# Simple API key authentication
# Generate with: openssl rand -base64 32
API_SECRET_KEY="generate-a-secure-random-key-here"

# Clerk Authentication (if using)
# Get from: https://dashboard.clerk.com/
CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# Node environment
NODE_ENV="development"

# Vercel region (optional)
# Options: iad1, sfo1, etc.
VERCEL_REGION="iad1"

# ===========================================
# INTEGRATIONS (Future)
# ===========================================

# Zapier webhook URL (for workflow automation)
ZAPIER_WEBHOOK_URL=""

# NVIDIA PersonaPlex (for advanced voice)
NVIDIA_PERSONAPLEX_URL=""

# Google Vertex AI (for enterprise deployments)
VERTEXAI_PROJECT_ID=""
VERTEXAI_LOCATION=""
